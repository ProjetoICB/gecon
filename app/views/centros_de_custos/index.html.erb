<h1>Centros De Custos</h1>

<table id="centro_custo" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Nome</th>
      <th class="text-center">Ativo</th>
      <th class="text-center"></th>
      <th class="text-center"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @centros_de_custos.each do |centro_de_custos| %>
      <tr>
        <td><%= centro_de_custos.nome %></td>
        <td class="text-center"><%= centro_de_custos.ativo == true ? "Sim" : "Não" %></td>
        <td class="text-center"><%= link_to 'Mostrar', centro_de_custos, class: 'btn btn-primary active' %></td>
        <td class="text-center"><%= link_to 'Editar', edit_centro_de_custos_path(centro_de_custos), class:'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Apagar', centro_de_custos, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Centro de custo', new_centro_de_custos_path, class: 'btn btn-primary active' %>
