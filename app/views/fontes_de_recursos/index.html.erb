<h1>Fontes De Recursos</h1>

<table id="fonte_recurso" class="table table-stripped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fontes_de_recursos.each do |fonte_de_recursos| %>
      <tr>
        <td><%= fonte_de_recursos.nome %></td>
        <td class="text-center"><%= link_to 'Mostrar', fonte_de_recursos, class: 'btn btn-primary active' %></td>
        <td class="text-center"><%= link_to 'Editar', edit_fonte_de_recursos_path(fonte_de_recursos), class: 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Apagar', fonte_de_recursos, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger active'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Fonte de recurso', new_fonte_de_recursos_path, class: 'btn btn-primary active' %>
