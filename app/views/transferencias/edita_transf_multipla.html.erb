  <h1> Editar transferências multiplas </h1>


  <% deb = Conta.find(@transferencia.debito_id)  %>
  <% cred = Conta.find(@transferencia.credito_id) %>
  <p> Data : <%= @transferencia.data.strftime("%d/%m/%Y") %> </p>
  <p> Data do documento: <%= @transferencia.datadocumento.strftime("%d/%m/%Y") %> </p>
  <p> Conta de débito: <%= deb.nome %> </p>


  <%= form_tag(atualiza_transf_multipla_path, method: :get) do %>
    <p> Conta de crédito:  <%= select_tag :cred, options_from_collection_for_select(Conta.all, :id, :nome,  cred.id) %>  </p>
    <p> Porcentagem: <%= number_field_tag :porc, @porc %>
     <%= hidden_field_tag :id, @transferencia.id %>
    <%= submit_tag "Enviar", class: 'btn btn-primary active' %>
  <% end %>





