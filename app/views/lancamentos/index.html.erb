<h1>Lançamentos</h1>

<table id="lancamento" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th> trasf_id</th>
      <th class="text-center">Processo</th>
      <th class="text-center">Conta</th>
      <th class="text-center"> Interessado </th>
      <th class="text-center"> Centro de Custo </th>
      <th class="text-center">Data</th>
      <th class="text-center">Fornecedor</th>
      <th class="text-center">Item de  receita/despesa</th>
      <th class="text-center">Observacao</th>
      <th class="text-center">Debito</th>
      <th class="text-center">Credito</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lancamentos.each do |lancamento| %>
      <tr>
        <td><%= lancamento.transferencia_id %></td>
        <td><%= lancamento.processo %></td>
        <td><%= lancamento.conta.numero %></td>
        <td><%= lancamento.conta.nome %>
        <td><%= lancamento.conta.centro_de_custo.nome %></td>
        <td><%= lancamento.data.strftime("%d/%m/%Y") %></td>
        <td><%= lancamento.fornecedor.nome if !lancamento.fornecedor_id.nil?  %></td>

        <td>
          <% if lancamento.tipo == "Crédito" %>
            (R) <%=  lancamento.item_de_receita_id.nil? ? "Transferência" : lancamento.item_de_receita.nome %>
          <% else %>
            (D) <%= lancamento.item_de_despesa_id.nil? ? "Transferência" : lancamento.item_de_despesa.nome %>
          <% end %>
        </td>

        <td><%= lancamento.observacao %></td>
        <td><%= number_to_currency(lancamento.debito) %></td>
        <td><%= number_to_currency(lancamento.credito) %></td>

        <td><%= link_to 'Mostrar', lancamento, class:'btn btn-primary active' %></td>
        <td>
          <% if !lancamento.credito.nil? %>
              <%= link_to 'Editar', edit_lancamento_path(lancamento, :tipo => 'Crédito'), class: 'btn btn-default' %>
          <% else %>
              <%= link_to 'Editar', edit_lancamento_path(lancamento, :tipo => 'Débito'), class: 'btn btn-default' %>
          <% end %>
        </td>

        <td><%= link_to 'Apagar', lancamento, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Crédito', new_lancamento_path(:tipo => "Crédito"), class:'btn btn-sm btn-primary active' %>
<%= link_to 'Novo Débito', new_lancamento_path(:tipo => "Débito"), class:'btn btn-sm btn-danger active' %>
