<h1>Logs</h1>

<table id="log" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Acao</th>
      <th class="text-center">Ip</th>
      <th class="text-center">Usuario</th>
      <th class="text-center">Data da ação</th>
      <th class="text-center">Detalhes</th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.acao %></td>
        <td><%= log.ip %></td>
        <td><%= log.usuario.nomd %></td>
        <td><%= log.created_at.strftime("%d/%m/%Y %H:%M") %>  <td>

        <td><%= link_to 'Mostrar', log, class: 'btm btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

