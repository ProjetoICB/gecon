<h1>Usuários</h1>

<table id="usuario" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Nome</th>
      <th class="text-center">Email</th>
      <th class="text-center">Ativo</th>
      <th class="text-center">Tipo</th>
      <th class="text-center">Telefone</th>
      <th class="text-center"> Departamento</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.ativo == true ? "Sim" : "Não"  %></td>
        <tD><%= usuario.tipo %> </tD>
        <td><%= usuario.telefone %></td>
        <td>
          <% @departamento = Departamento.where(id: usuario.departamento) %>
          <% @departamento.each do |dep| %>
            <%= dep.nome %>
          <% end %>
        </td>
        <td class="text-center"><%= link_to 'Mostrar', usuario, class: 'btn btn-primary active' %></td>
        <td class="text-center"><%= link_to 'Editar', edit_usuario_path(usuario), class: 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Apagar', usuario, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

