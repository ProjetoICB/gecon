<h1>Fornecedores</h1>

<table id="fornecedor" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedores.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td class="text-center"><%= link_to 'Mostrar', fornecedor, class: 'btn btn-primary active' %></td>
        <td class="text-center"><%= link_to 'Editar', edit_fornecedor_path(fornecedor), class: 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Desativar', deativa_fornecedor_path(fornecedor), data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Fornecedor', new_fornecedor_path, class: 'btn btn-primary active' %>
